@page "/pieceofwork/{Id:int}/view"
@using Microsoft.AspNetCore.Authorization
@namespace Jhipster.Client.Pages.Entities.PieceOfWork

@attribute [Authorize(Roles = "ROLE_USER")]

<div class="row justify-content-center">
    <div class="col-8">
        @if (PieceOfWork != null && PieceOfWork.Id != 0)
        {
            <div>
                <h2><span>PieceOfWork</span>@PieceOfWork.Id</h2>

                <hr>

                @*<jhi-alert-error></jhi-alert-error>*@

                <dl class="row-md jh-entity-details">
                    <dt><span>Title</span></dt>
                    <dd>
                        <span>@PieceOfWork.Title</span>
                    </dd>
                    <dt><span>Description</span></dt>
                    <dd>
                        <span>@PieceOfWork.Description</span>
                    </dd>
                </dl>

                <button @onclick="Back" class="btn btn-info">
                    <Icon Name='"fa-arrow-left"' />&nbsp;<span>Back</span>
                </button>

                <a href="/pieceofwork/@PieceOfWork.Id/edit" class="btn btn-primary">
                    <Icon Name='"fa-pencil-alt"' />&nbsp;<span>Edit</span>
                </a>
            </div>
        }
    </div>
</div>